<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <lifecycle>
            <phase-listener>
                com.shop.JavaBean.ShopPhaseEvent
            </phase-listener>
        </lifecycle>
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{productController.prepareCreate}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/product/Create.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{productController.prepareCreate}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/customer/View.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-action>#{ordersController.goShoppingCartPage}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/shoppingcart.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{ordersController.OrderConfirm}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/ordersuccess.xhtml</to-view-id>
        </navigation-case>    
         <navigation-case>
            <from-action>#{ordersController.OrderCancel}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/shoppingcart.xhtml</to-view-id>
        </navigation-case>    
        <navigation-case>
            <from-action>#{ordersController.setOrderList}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/List.xhtml</to-view-id>
        </navigation-case>  
        <navigation-case>
            <from-action>#{ordersController.setOrderDetial}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/orderdetails.xhtml</to-view-id>
        </navigation-case>      
        <navigation-case>
            <from-action>#{ordersController.destroy}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/orders/List.xhtml</to-view-id>
        </navigation-case>                 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/orders/*</from-view-id>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>customer/View?faces-redirect=true</from-outcome>
            <to-view-id>/customer/View.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/product/*</from-view-id>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>customer/View?faces-redirect=true</from-outcome>
            <to-view-id>/customer/View.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/customer/*</from-view-id>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>customer/View?faces-redirect=true</from-outcome>
            <to-view-id>/customer/View.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/*</from-view-id>
        <navigation-case>
            <from-action>#{customerController.goHomePage}</from-action>
            <from-outcome>customer/View?faces-redirect=true</from-outcome>
            <to-view-id>/customer/View.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <protected-views>
        <url-pattern>/*</url-pattern>
    </protected-views>
</faces-config>